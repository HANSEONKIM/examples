<script type="text/javascript">
	$(function(){
		
		
		//p태그에 hover
		
		//직접 css 주는 방법
		
		
		/* $('p').hover(function(){
			
			$(this).css('background','crimson').css('color','white');
		},function(){
			$(this).css('background','white');
		}) */
		
		//style class를 주는 방법
	
	$('p').hover(function() {
		

			$(this).addClass('styleClass');
		}, function() {
			$(this).removeClass();
		})

	})
</script>
<style>
.styleClass{

	background : red;
	color : white;
	border : 3px solid yellow;
}

